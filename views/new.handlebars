<div class="container my-5 bg-light p-5" style="border-radius: 50px;">

  <form action="/restaurants" method="POST" onsubmit="doAlert.create_alert();">

    <label for="name">
      <h4>Restaurant Chinese Name</h4>
    </label>
    <input type="text" class="form-control mb-3" id="name" name="name">

    <label for="name_en">
      <h4>Restaurant English Name</h4>
    </label>
    <input type="text" class="form-control mb-3" id="name_en" name="name_en">

    <label for="category">
      <h4>Category</h4>
    </label>
    <input type="text" class="form-control mb-3" id="category" name="category">

    <label for="image">
      <h4>Image URL</h4>
    </label>
    <input type="url" class="form-control mb-3" id="image" name="image">

    <label for="location">
      <h4>Location</h4>
    </label>
    <input type="text" class="form-control mb-3" id="location" name="location">

    <label for="phone">
      <h4>Phone</h4>
    </label>
    <input type="text" class="form-control mb-3" id="phone" name="phone">

    <label for="google_map">
      <h4>Google Map URL</h4>
    </label>
    <input type="url" class="form-control mb-3" id="google_map" name="google_map">

    <label for="rating">
      <h4>Rating</h4>
    </label>
    <input type="number" placeholder="5.0" step="0.1" min="1" max="5" class="form-control mb-3" id="rating"
      name="rating" required>

    <label for="description">
      <h4>Description</h4>
    </label>
    <textarea rows="4" class="form-control mb-3" id="description" name="description"></textarea>

    <button type="submit" class="btn btn-primary my-3">Create</button>

  </form>

</div>